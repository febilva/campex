<p id="notice"><%= notice %></p>

<h1>Listing Course Types</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Name</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_types.each do |course_type| %>
      <tr>
        <td><%= course_type.department %></td>
        <td><%= course_type.name %></td>
        <td><%= course_type.code %></td>
        <td><%= link_to 'Show', course_type %></td>
        <td><%= link_to 'Edit', edit_course_type_path(course_type) %></td>
        <td><%= link_to 'Destroy', course_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

