<%= form_for [@department, @course] do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :course_type_id %><br>
    <%= f.select :course_type_id, options_from_collection_for_select(CourseType.all, :id, :name), {}, { class: "ui dropdown" } %>
  </div>
  <div class="field">
    <%= f.label :term_structure_id %><br>
    <%= f.select :term_structure_id, options_from_collection_for_select(TermStructure.all, :id, :name), {}, { class: "ui dropdown" } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
